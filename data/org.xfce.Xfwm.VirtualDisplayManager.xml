<node>
  <interface name="org.xfce.Xfwm.VirtualDisplayManager">

    <!-- Create a virtual display and return its ID -->
    <method name="CreateVirtualDisplay">
      <arg name="width"   type="u" direction="in"/>
      <arg name="height"  type="u" direction="in"/>
      <arg name="refresh" type="u" direction="in"/>
      <!-- e.g. "desktop", "workspace:0", "monitor:HDMI-0" -->
      <arg name="source"  type="s" direction="in"/>
      <arg name="id"      type="u" direction="out"/>
    </method>

    <!-- Destroy a previously created virtual display -->
    <method name="DestroyVirtualDisplay">
      <arg name="id" type="u" direction="in"/>
    </method>

    <!-- Get a handle that Breezy can capture from -->
    <method name="GetVirtualDisplaySurface">
      <arg name="id"          type="u" direction="in"/>
      <!-- For now: X11 window ID or pixmap ID as uint32 -->
      <arg name="surfaceId"   type="u" direction="out"/>
      <!-- e.g. "window", "pixmap", "shm" -->
      <arg name="surfaceType" type="s" direction="out"/>
    </method>

    <!-- Change which desktop/workspace/monitor is mirrored -->
    <method name="SetVirtualDisplaySource">
      <arg name="id"     type="u" direction="in"/>
      <arg name="source" type="s" direction="in"/>
    </method>

    <!-- Lifecycle signals -->
    <signal name="VirtualDisplayCreated">
      <arg name="id" type="u"/>
    </signal>

    <signal name="VirtualDisplayDestroyed">
      <arg name="id" type="u"/>
    </signal>

  </interface>
</node>


